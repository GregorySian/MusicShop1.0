@inject Microsoft.AspNetCore.Identity.SignInManager<Microsoft.AspNetCore.Identity.IdentityUser> SignInManager
@{ var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any(); }

<ul class="nav nav-pills nav-stacked">
    <li class="@MusicHub.Views.Account.AccountNavPages.IndexNavClass(ViewContext)"><a asp-action="MyAccount">Profile </a></li>
    <li class="@MusicHub.Views.Account.AccountNavPages.ChangePasswordNavClass(ViewContext)"><a asp-action="ChangePassword">Password </a></li>
    @if (hasExternalLogins)
    {
<li class="@MusicHub.Views.Account.AccountNavPages.ExternalLoginsNavClass(ViewContext)"><a asp-action="ExternalLogins">External logins </a></li>
}
    <li class="@MusicHub.Views.Account.AccountNavPages.TwoFactorAuthenticationNavClass(ViewContext)"><a asp-action="TwoFactorAuthentication">Two-factor authentication </a></li>
</ul>

