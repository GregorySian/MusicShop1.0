@using MusicHub.Models.Order;
@model IEnumerable<Orders>

@{
    ViewBag.Title = "Orders";
    Layout = "_AdminLayout";
}
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>Όνομα</th>
            <th>Επίθετο</th>
            <th>Ταχυδρομικός Κώδικας</th>
            <th colspan="3">Details</th>
            <th></th>
        </tr>
        @foreach (Orders o in Model)
        {
            <tr>
                <td>@o.FirstName</td>
                <td>@o.Surname</td>
                <td>@o.ZipCode</td>
                <th>Product</th>
                <th>Quantity</th>
                <td>
                    <form asp-action="MarkShipped" method="post">
                        <input type="hidden" name="orderId" value="@o.OrdersId" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            Ship
                        </button>
                    </form>
                </td>
            </tr>
            @foreach (MusicHub.Models.Cart.Cart.CartLine line in o.Lines)
            {
                <tr>
                    <td colspan="2"></td>
                    <td>@line.Quantity</td>
                    <td></td>
                </tr>
            }
        }
    </table>
}
else
{
    <div class="text-center">No Unshipped Orders</div>
}

