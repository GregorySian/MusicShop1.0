</div>*@

<header>
    <div class="text-center">
        <h1 class="display-4">Welcome To Music Hub!</h1>
        <h2 class="subtitle">We got you covered on everything about music!</h2>
        <div id="Slider" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/img/depositphotos_6406120-stock-illustration-music-banner.jpg" alt="First Slide" />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/img/the-concept-of-the-evolution-of-music-cassette-cd-disk-mp3-player-on-blue-background-vintage-and-modernity-music-support-banner-W71CM3.jpg" alt="Second Slide" />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/img/Main-Banner.jpg" alt="Third Slide" />
                </div>

                <div class="carousel-item">
                    <img class="d-block w-100" src="~/img/Free-Music-YouTube-Channel-Banner-Template-min.jpg" alt="Fourth Slide" />
                </div>
            </div>
            <a class="carousel-control-prev" href="#Slider" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#Slider" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</header>



<body>

    

    @foreach (var a in Model)
    {
        <div class="container">
            <div class=".row-cols-3">
                <div class="col span_1_of_3">
                    <div class="caption">
                        <div class="Album-Title">
                            <h3>
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@a.Id"> @a.Title</a>
                            </h3>
                        </div>
                        <div class="Album">
                            <div class="img-thumbnail">
                                <img src="@a.ImageUrl">
                                <div class="pull-right">
                                    <h4>@a.Price.ToString("C")</h4>
                                </div>
                                <div class="align-content-center">
                                    @Html.Partial("AddToCart", a)
                                    @Html.Partial("AddWishlist", a)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>

<script>
    $('.carousel').carousel({
        interval: 2000
    })</script>

